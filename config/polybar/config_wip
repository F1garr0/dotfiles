;--------------------------------------------
; bars                                      ;
;--------------------------------------------

[bar/base]
    dpi      = 192
    width    = 99%
    height   = 23
    offset-x = 9
    offset-y = 9
    override-redirect = false

    bottom = true

    background = #00000000
    foreground = ${colors.bar_fg}

    border-top-color    = #292929
    border-bottom-color = #292929

    spacing            = 0
    padding-left       = 0
    padding-right      = 0
    module-margin-left = 0
    module-top-size    = 5
    module-bottom-size = 5


    font-N = <fontconfig pattern>;<vertical offset>
    font-0 = WunconSiji:size=4;2
    font-1 = lemon:pixelsize=8;1

    modules-left   = music previous playpause next volume
    modules-center = workspaces
    modules-right  = ram battery date time

    fixed-center = true

;--------------------------------------------
; modules                                   ;
;--------------------------------------------

[module/network]
    type          = internal/network
    interface     = wlp3s0
    ping-interval = 3

[module/previous]
	type = custom/text

	content = "   "
	content-background = ${xrdb:color4}
	content-foreground = ${xrdb:color15}
	content-padding = 0

	click-left = playerctl previous

[module/playpause]
	type = custom/text

	content = ""
	content-background = ${xrdb:color4}
	content-foreground = ${xrdb:color15}
	content-padding = 0

	click-left = playerctl play-pause

[module/next]
	type = custom/text

	content = "   "
	content-background = ${xrdb:color4}
	content-foreground = ${xrdb:color15}
	content-padding = 0

	click-left = playerctl next

[module/spotify]
    type = custom/script
    exec = sh ~/.config/polybar/spotify
    interval = 1

    format-prefix            = 
    format-prefix-background = ${xrdb:color2}
    format-prefix-foreground = ${xrdb:color15}
    format-prefix-padding    = 1

    label-background = ${xrdb:color2}
    label-foreground = ${xrdb:color15}
    label-padding    = 1

    click-left   = playerctl play-pause
    click-middle = playerctl previous
    click-right  = playerctl next

[module/xwindow]
    y-offset      = 10
    type          = internal/xwindow
    format        = <label>
    label         = %title:0:50:%

    label-foreground = ${xrdb:color15}
    label-padding    = 2

[module/date]
    type     = internal/date
    interval = 1.0
    date     =
    date-alt =  [ %a %b %d|
    time     = "%a %d %b "
    time-alt = %H:%M:%S %p
    label    = %date% %time%

    format         = <label>
    format-padding = 0

    format-prefix            = 
    format-prefix-background = ${xrdb:color0}
    format-prefix-foreground = ${xrdb:color15}
    format-prefix-padding    = 1

    label-background = ${xrdb:color0}
    label-foreground = ${xrdb:color15}
    label-padding    = 0

[module/time]
    type     = internal/date
    interval = 1.0
    time     = "%I:%M %p "
    label    = %date% %time%

    format         = <label>
    format-padding = 0

    format-prefix            =
    format-prefix-background = ${colors.cpu_p_bg}
    format-prefix-foreground = ${colors.modules_prefix_fg}
    format-prefix-padding    = 0

    label-background = ${xrdb:color0}
    label-foreground = ${xrdb:color15}
    label-padding    = 0

[module/music]
    type = internal/mpd

    host = 127.0.0.1
    port = 6600

    interval = 2

    format-online = <label-song>

    label-song         = "  %artist% - %title%"
    label-song-padding = 2

    label                 = "%output:0:45:...%"
    label-song-background = ${xrdb:color2}
    label-song-foreground = ${xrdb:color15}
    label-padding-right   = 1

    format-online-prefix-padding = 1

    click-left   = playerctl previous
    click-middle = playerctl play-pause
    click-right  = playerctl next

[module/battery]
